extends layout

block content
  center
    .w3-container.w3-margin.w3-center(style="height:350px;width:40%;margin:auto;")
        .w3-card-4.w3-white
            header.w3-container.w3-margin-top
                .w3-lime
                    h3 
                        b Registo 
                .w3-container
                    form.w3-container(action='/registo' method="POST")
                        label
                            b Nome
                        input.w3-input.w3-border(type="text", name="nome" required)
                        label
                            b Email
                        input.w3-input.w3-border(type="text", name="email" required)
                        label
                            b Filiação
                        input.w3-input.w3-border(type="text", name="filiacao")
                        label
                            
                            b Nível
                        select.w3-select.w3-border(name="nivel" required)
                            option(value="0") Consumidor
                            option(value="1") Produtor
                        

                        label
                            b Password
                        input.w3-input.w3-border(type="password", name="password" required)                        

                        input.w3-btn.w3-border.w3-margin.w3-lime(type="submit", value="Inserir")
                        input.w3-btn.w3-border.w3-margin.w3-lime(type="reset", value="Limpar valores")

            footer.w3-container
                address.w3-right
                    a(href="/") 
                        button.w3-button.w3-margin Voltar à página inicial